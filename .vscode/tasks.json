{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "clang++ debug",
            "command": "/usr/bin/clang++",
            "args": [
                "-std=c++17",
                "-mmacosx-version-min=10.15",
                "-Wall",
                "-framework",
                "OpenGL",
                "-framework",
                "GLUT",
                "-lpng",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-v"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        }
    ]
}